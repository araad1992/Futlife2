<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/icons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:id="@+id/progress_bar"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lbl_title_dialog"
            android:padding="16dp"
            android:text="@string/dialog_title_information"
            android:textColor="@color/primaryText"
            android:textSize="19sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"/>
        <LinearLayout
            android:id="@+id/layout_content_edit_info"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_item_edit_1"
                    android:contentDescription="@string/action_about"
                    android:src="@drawable/ic_profile_identity"
                    android:layout_gravity="center|start"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
                <EditText
                    android:id="@+id/txt_username_profile"
                    android:textColor="@color/primaryText"
                    android:textSize="19sp"
                    android:hint="@string/challenge_username"
                    android:textColorHint="@color/divider"
                    android:inputType="textEmailSubject"
                    android:layout_toEndOf="@+id/img_item_edit_1"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_item_edit_2"
                    android:contentDescription="@string/action_about"
                    android:src="@drawable/ic_profile_identity"
                    android:layout_gravity="center|start"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <EditText
                    android:id="@+id/txt_fullname_profile"
                    android:textColor="@color/primaryText"
                    android:textSize="19sp"
                    android:hint="@string/challenge_username"
                    android:textColorHint="@color/divider"
                    android:inputType="text"
                    android:layout_toEndOf="@+id/img_item_edit_2"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_item_edit_3"
                    android:contentDescription="@string/action_about"
                    android:src="@drawable/ic_ubication"
                    android:layout_gravity="center|start"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <AutoCompleteTextView
                    android:id="@+id/txt_ubication_profile"
                    android:textColor="@color/primaryText"
                    android:textSize="19sp"
                    android:hint="@string/challenge_username"
                    android:textColorHint="@color/divider"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    android:layout_toEndOf="@+id/img_item_edit_3"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_item_edit_4"
                    android:contentDescription="@string/action_about"
                    android:src="@drawable/ic_email_profile"
                    android:layout_gravity="center|start"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <EditText
                    android:id="@+id/txt_email_profile"
                    android:textColor="@color/primaryText"
                    android:textSize="19sp"
                    android:hint="@string/challenge_username"
                    android:textColorHint="@color/divider"
                    android:inputType="textEmailAddress"
                    android:layout_toEndOf="@+id/img_item_edit_4"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_item_edit_5"
                    android:contentDescription="@string/action_about"
                    android:src="@drawable/ic_telephone"
                    android:layout_gravity="center|start"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <EditText
                    android:id="@+id/txt_telephone_profile"
                    android:textColor="@color/primaryText"
                    android:textSize="19sp"
                    android:hint="@string/challenge_username"
                    android:textColorHint="@color/divider"
                    android:inputType="number|phone"
                    android:layout_toEndOf="@+id/img_item_edit_5"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_item_edit_6"
                    android:contentDescription="@string/action_about"
                    android:src="@drawable/ic_calendar"
                    android:layout_gravity="center|start"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <EditText
                    android:id="@+id/txt_birthdate_profile"
                    android:textColor="@color/primaryText"
                    android:textSize="19sp"
                    android:hint="@string/challenge_username"
                    android:textColorHint="@color/divider"
                    android:inputType="none"
                    android:focusable="false"
                    android:layout_toEndOf="@+id/img_item_edit_6"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"/>
        <LinearLayout
            app:layout_widthPercent="100%"
            app:layout_heightPercent="15%"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/but_cancel_dialog"
                android:background="@drawable/background_button_cancel"
                android:text="@string/dialog_cancel"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@color/icons"
                android:layout_margin="8dp"
                android:layout_width="120dp"
                android:layout_height="45dp" />
            <Button
                android:id="@+id/but_ok_dialog"
                android:background="@drawable/background_button"
                android:text="@string/dialog_update"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@color/icons"
                android:layout_margin="8dp"
                android:layout_width="120dp"
                android:layout_height="45dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>