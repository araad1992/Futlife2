<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_games_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="1dp"
        android:paddingEnd="8dp"
        android:background="@drawable/background_text_game">
        <ImageView
            android:id="@+id/chip_template"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_football"
            android:scaleType="centerInside"
            android:padding="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/lbl_game_template_1"
            android:layout_toEndOf="@+id/chip_template"
            android:textColor="@color/icons"
            android:text="@string/register_username"
            android:textSize="19sp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_games_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="1dp"
        android:paddingEnd="8dp"
        android:background="@drawable/background_tag_game">
        <ImageView
            android:id="@+id/img_template_2"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_football"
            android:scaleType="centerInside"
            android:padding="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/lbl_game_template_2"
            android:layout_toEndOf="@+id/img_template_2"
            android:textColor="@color/primaryText"
            android:text="@string/register_username"
            android:textSize="19sp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>