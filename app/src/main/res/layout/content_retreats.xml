<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ideamosweb.futlife.views.Retreats"
    tools:showIn="@layout/activity_retreats">

    <LinearLayout
        android:id="@+id/form_retreats"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:background="@drawable/background_card_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/txt_phone_number_retreats"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_view_grey"
            android:inputType="phone"
            android:hint="@string/phone_number_retreats"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/txt_number_count"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:hint="@string/acount_number_retreats"
            android:background="@drawable/background_view_grey"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/divider"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/lbl_amount_retreat"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            android:text="@string/amount_retreats"
            android:textColor="@color/secondaryText"
            android:textSize="17sp"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <pl.polak.clicknumberpicker.ClickNumberPickerView
            android:id="@+id/txt_amount_retreat"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            app:decimal_number="0"
            app:max_value="100000"
            app:min_value="20000"
            app:step="1000"
            app:picker_corner_radius="8"
            app:swipe_enabled="false"
            app:left_picker_layout="@layout/left_picker_layout"
            app:right_picker_layout="@layout/right_picker_layout"
            app:pickers_background_color="@color/divider"
            app:value_background_color="@color/buttons"
            app:value_text_color="@color/secondaryText"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/form_retreats"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="75dp"
            android:layout_height="wrap_content">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_cancel"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:backgroundTint="@color/color_errors"
                android:src="@drawable/ic_failed" />
            <TextView
                android:id="@+id/lbl_cancel_retreat"
                android:text="@string/cancel_retreat"
                android:textColor="@color/icons"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="60dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="75dp"
            android:layout_height="wrap_content">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_confirm"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:backgroundTint="@color/color_success"
                android:src="@drawable/ic_accepted" />
            <TextView
                android:id="@+id/lbl_confirm_retreat"
                android:text="@string/confirm_retreat"
                android:textColor="@color/icons"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
