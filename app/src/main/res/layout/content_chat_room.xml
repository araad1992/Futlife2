<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_chat"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ideamosweb.futlife.views.ChatRoom"
    tools:showIn="@layout/activity_chat_room">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/colorPrimaryOpacity"
        app:cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/lbl_player_id"
                android:layout_centerVertical="true"
                android:text="@string/challenge_username"
                android:textColor="@color/icons"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lbl_back_timer"
                android:text="@string/lbl_time_back"
                android:textColor="@color/color_info_light"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_chat"
        tools:listitem="@layout/row_message_in"
        android:layout_marginTop="35dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_above="@+id/layout_message"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/layout_message"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/txt_message_send"
            android:background="@drawable/background_text_send"
            android:hint="@string/hint_chat"
            android:textSize="21sp"
            android:layout_gravity="center"
            android:layout_marginStart="14dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:inputType="textCapSentences|textMultiLine"
            android:minLines="1"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:maxLength="2000"
            android:maxLines="5"
            android:layout_weight=".65"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/fab_margin"
            android:scaleType="center"
            android:src="@drawable/ic_send" />
    </LinearLayout>

</RelativeLayout>
