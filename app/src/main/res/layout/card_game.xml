<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_game"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_game"
            android:src="@drawable/loading_game"
            android:contentDescription="@string/app_name"
            android:layout_width="300dp"
            android:layout_height="match_parent" />
        <com.hanks.library.AnimateCheckBox
            android:id="@+id/checkbox_game"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            app:animDuration="200"
            app:checkedColor="@color/colorAccentLight"
            app:lineColor="@color/icons"
            app:lineWidth="1.5dp"
            app:unCheckColor="@color/colorAccentLight"
            android:layout_marginTop="98dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/img_game" />
    </RelativeLayout>
</android.support.v7.widget.CardView>