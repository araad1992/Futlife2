<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_report"
    app:cardBackgroundColor="@color/colorTransparent"
    app:cardElevation="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:background="@color/colorTransparent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar_user"
            android:src="@drawable/avatar_default"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            app:border_width="1dp"
            app:border_color="@color/icons"
            android:layout_centerVertical="true"
            android:layout_width="65dp"
            android:layout_height="65dp" />
        <LinearLayout
            android:id="@+id/layout_names"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_avatar_user">
            <TextView
                android:id="@+id/lbl_username"
                android:text="@string/register_username"
                android:textColor="@color/icons"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lbl_date_reported"
                android:text="@string/lbl_date_reported_challenge"
                android:textColor="@color/divider"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lbl_amount_bet"
                android:text="@string/lbl_amount_reported_challenge"
                android:textColor="@color/color_warnings"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_state_report"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_validate_state"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/lbl_state_report"
                android:layout_marginTop="3dp"
                android:text="@string/lbl_state_report"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@+id/view_separe"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/separed"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>