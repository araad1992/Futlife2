<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".views.Register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/icon_logo"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <LinearLayout
            android:id="@+id/form_register"
            android:layout_below="@+id/icon_logo"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txt_fullname"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_text"
                android:inputType="textCapWords"
                android:hint="@string/register_fullname"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <View
                android:background="@color/divider"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <EditText
                android:id="@+id/txt_username"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/background_text"
                android:inputType="textPersonName"
                android:hint="@string/register_username"
                android:textSize="16sp"
                android:maxLength="9"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <View
                android:background="@color/divider"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <EditText
                android:id="@+id/txt_email"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/background_text"
                android:inputType="textEmailAddress"
                android:hint="@string/register_email"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <View
                android:background="@color/divider"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <EditText
                android:id="@+id/txt_password"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="textPassword"
                android:hint="@string/login_password"
                android:background="@drawable/background_text"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_terms_and_conditions"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/form_register"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/check_terms_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lbl_terms_conditions"
                android:text="@string/label_terms_conditions"
                android:textColor="@color/icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/layout_terms_and_conditions"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_facebook_register"
                app:backgroundTint="@color/iconsFacebook"
                app:fab_colorPressed="@color/iconsFacebookDark"
                app:fab_colorRipple="@color/iconsFacebookDark"
                app:elevation="6dp"
                android:src="@drawable/ic_facebook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom" />
            <Space
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_register"
                app:backgroundTint="@color/colorAccent"
                app:fab_colorPressed="@color/colorAccentDark"
                app:fab_colorRipple="@color/colorAccentDark"
                app:elevation="6dp"
                android:src="@drawable/ic_next"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom" />
        </LinearLayout>
        <!-- Button for login using facebook -->
        <com.facebook.login.widget.LoginButton
            android:id="@+id/but_register_facebook"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
