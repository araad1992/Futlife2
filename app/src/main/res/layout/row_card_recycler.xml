<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_item_row"
                android:contentDescription="@string/app_name"
                android:layout_marginStart="8dp"
                android:src="@drawable/xbox360"
                android:scaleType="centerCrop"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="47.2dp" />
            <LinearLayout
                android:background="@drawable/tag_item"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="47.2dp">
                <TextView
                    android:id="@+id/lbl_count_row"
                    android:gravity="center"
                    android:textColor="@color/icons"
                    android:textSize="21sp"
                    android:layout_marginEnd="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight=".60"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/lbl_name_item"
                    android:textColor="@color/icons"
                    android:textSize="21sp"
                    android:layout_marginStart="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lbl_detail_item"
                    android:textColor="@color/secondaryText"
                    android:textSize="17sp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_arrow_consoles"
                android:src="@drawable/arrow_next_collapse"
                android:contentDescription="@string/action_about"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginEnd="6dp"
                android:layout_weight=".01"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_consoles_game"
            android:visibility="gone"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_marginStart="130dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/colorTransparent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>