<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/layout_reported"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ideamosweb.futlife.views.Reported"
    tools:showIn="@layout/activity_reported">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="14dp"
                android:background="@drawable/background_card_credit"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_title_proof_report"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/lbl_title_proof_reported"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lbl_description_report"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/lbl_description_reported"
                    android:textSize="19sp"
                    android:textColor="@color/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/txt_description"
                    android:textColor="@color/secondaryText"
                    android:textSize="19sp"
                    android:padding="8dp"
                    android:hint="@string/lbl_proof_report"
                    android:textColorHint="@color/divider"
                    android:background="@drawable/background_view_grey"
                    android:lines="5"
                    android:gravity="top|start"
                    android:inputType="textMultiLine|textCapSentences"
                    android:scrollHorizontally="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_image_proof"
                        android:visibility="gone"
                        android:layout_margin="2dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/image_error"
                        android:contentDescription="@string/app_name"
                        android:layout_width="match_parent"
                        android:layout_height="170dp" />
                </LinearLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <TextView
                        android:id="@+id/lbl_attach"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/secondaryText"
                        android:text="@string/lbl_attach_report"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.melnykov.fab.FloatingActionButton
                        android:id="@+id/fab_youtube"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="25dp"
                        app:fab_colorNormal="@color/color_errors"
                        app:fab_colorPressed="@color/color_dialog_content"
                        app:fab_colorRipple="@color/color_dialog_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_youtube" />
                    <com.melnykov.fab.FloatingActionButton
                        android:id="@+id/fab_camera"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="25dp"
                        app:fab_colorNormal="@color/color_info"
                        app:fab_colorPressed="@color/color_info_light"
                        app:fab_colorRipple="@color/color_info_light"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_camera_reported"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/fab_youtube" />
                    <com.melnykov.fab.FloatingActionButton
                        android:id="@+id/fab_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_alignParentEnd="true"
                        app:fab_colorNormal="@color/colorAccent"
                        app:fab_colorPressed="@color/colorAccentDark"
                        app:fab_colorRipple="@color/colorAccentDark"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_accepted" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
