<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_tournament"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:background="@drawable/stripe_row_timeline"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/bar_vertical_color"
            android:background="@color/color_errors"
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/img_cover_game"
            android:layout_toEndOf="@+id/bar_vertical_color"
            android:src="@drawable/loading_game"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:layout_width="80dp"
            android:layout_height="110dp" />
        <android.support.percent.PercentRelativeLayout
            android:layout_toEndOf="@+id/img_cover_game"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="8dp"
                app:layout_widthPercent="73%"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/lbl_name_tournament"
                    android:text="@string/app_name"
                    android:textSize="20sp"
                    android:textColor="@color/icons"
                    android:layout_marginStart="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/layout_details_tournament"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_marginBottom="4dp"
                app:layout_widthPercent="27%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/divider"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/layout_arrow"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:id="@+id/img_arrow_next"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_next_timeline"
                        android:contentDescription="@string/app_name"
                        android:layout_width="37dp"
                        android:layout_height="37dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_console_tournament"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/thumbnail_ps4"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />
            </RelativeLayout>
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>