<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ideamosweb.futlife.views.Feedback"
    tools:showIn="@layout/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/background_card_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <EditText
            android:id="@+id/txt_email_contact"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:hint="@string/lbl_email_contact"
            android:textColorHint="@color/divider"
            android:textColor="@color/secondaryText"
            android:background="@drawable/background_view_grey"
            android:layout_width="match_parent"
            android:layout_height="41dp" />
        <EditText
            android:id="@+id/txt_name_contact"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="12dp"
            android:hint="@string/lbl_name_contact"
            android:textColorHint="@color/divider"
            android:textColor="@color/secondaryText"
            android:background="@drawable/background_view_grey"
            android:layout_width="match_parent"
            android:layout_height="41dp" />
        <EditText
            android:id="@+id/txt_telephone_contact"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="12dp"
            android:hint="@string/lbl_telephone_contact"
            android:textColorHint="@color/divider"
            android:textColor="@color/secondaryText"
            android:background="@drawable/background_view_grey"
            android:layout_width="match_parent"
            android:layout_height="41dp" />
        <EditText
            android:id="@+id/txt_message_contact"
            android:layout_marginTop="12dp"
            android:textColor="@color/secondaryText"
            android:textSize="19sp"
            android:padding="8dp"
            android:hint="@string/lbl_message_contact"
            android:textColorHint="@color/divider"
            android:background="@drawable/background_view_grey"
            android:lines="5"
            android:maxLength="500"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:scrollHorizontally="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="center"
        app:fabSize="normal"
        app:backgroundTint="@color/color_success"
        android:src="@drawable/ic_send"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

</RelativeLayout>