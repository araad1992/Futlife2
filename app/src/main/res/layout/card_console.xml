<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_console"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_console"
            android:src="@drawable/loading_console"
            android:contentDescription="@string/app_name"
            android:layout_width="230dp"
            android:layout_height="230dp" />
        <com.hanks.library.AnimateCheckBox
            android:id="@+id/checkbox_console"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            app:animDuration="200"
            app:checkedColor="@color/colorAccentLight"
            app:lineColor="@color/icons"
            app:lineWidth="1.5dp"
            app:unCheckColor="@color/colorAccentLight"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/img_console" />
    </RelativeLayout>
</android.support.v7.widget.CardView>