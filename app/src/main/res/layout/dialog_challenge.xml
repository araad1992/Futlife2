<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:background="@color/icons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_title_dialog"
        android:text="@string/dialog_challenge_title"
        android:textSize="27sp"
        android:textColor="@color/primaryText"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_player_1"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="2dp"
                app:border_color="@color/color_success"
                android:id="@+id/avatar_player_1"
                android:src="@drawable/avatar_default"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/lbl_player_1"
                android:layout_gravity="center"
                android:text="@string/challenge_username"
                android:textColor="@color/primaryText"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_challenge_player"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:id="@+id/layout_player_2"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="2dp"
                app:border_color="@color/color_success"
                android:id="@+id/avatar_player_2"
                android:src="@drawable/avatar_default"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/lbl_player_2"
                android:layout_gravity="center"
                android:text="@string/challenge_username"
                android:textColor="@color/primaryText"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lbl_data_not_found"
            android:text="@string/dialog_challenge_not_found"
            android:drawableTop="@drawable/ic_alert"
            android:drawablePadding="5dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="35dp"
            android:textColor="@color/secondaryText"
            android:textSize="19sp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/progress_bar_dialog"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:indeterminate="true"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <LinearLayout
            android:id="@+id/layout_options_challenge"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_amount_dialog"
                    android:text="@string/dialog_challenge_amount"
                    android:textSize="19sp"
                    android:textColor="@color/primaryText"
                    android:layout_marginEnd="14dp"
                    android:layout_weight="0.27"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <android.support.percent.PercentRelativeLayout
                    android:layout_weight="0.73"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <pl.polak.clicknumberpicker.ClickNumberPickerView
                        android:id="@+id/txt_amount_bet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:decimal_number="0"
                        app:max_value="100000"
                        app:min_value="1000"
                        app:step="1000"
                        app:picker_corner_radius="4"
                        app:swipe_enabled="false"
                        app:left_picker_layout="@layout/left_picker_layout"
                        app:right_picker_layout="@layout/right_picker_layout"
                        app:pickers_background_color="@color/divider"
                        app:value_background_color="@color/buttons"
                        app:value_text_color="@color/secondaryText"/>
                </android.support.percent.PercentRelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_real_value_bet"
                    android:text="@string/dialog_challenge_real_amount"
                    android:textSize="19sp"
                    android:textColor="@color/primaryText"
                    android:layout_marginEnd="14dp"
                    android:layout_weight="0.27"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_real_value_bet"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:hint="@string/lbl_real_charge"
                    android:textSize="19sp"
                    android:textColorHint="@color/divider"
                    android:textColor="@color/secondaryText"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:background="@drawable/background_view_grey"
                    android:layout_gravity="center"
                    android:layout_weight="0.73"
                    android:layout_width="0dp"
                    android:layout_height="41dp" />
            </LinearLayout>
            <LinearLayout
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_consoles_dialog"
                    android:text="@string/dialog_challenge_consoles"
                    android:textSize="19sp"
                    android:textColor="@color/primaryText"
                    android:layout_marginEnd="14dp"
                    android:layout_weight="0.27"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:background="@drawable/background_view_grey"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:layout_weight="0.73"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_consoles"
                        android:textSize="14sp"
                        android:textColor="@color/primaryText"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_games_dialog"
                    android:text="@string/dialog_challenge_games"
                    android:textSize="19sp"
                    android:textColor="@color/primaryText"
                    android:layout_marginEnd="14dp"
                    android:layout_weight="0.27"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:background="@drawable/background_view_grey"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:layout_weight="0.73"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_games"
                        android:textSize="14sp"
                        android:textColor="@color/primaryText"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/but_cancel_challenge"
                    android:text="@string/dialog_challenge_cancel"
                    android:textSize="14sp"
                    android:textColor="@color/icons"
                    android:background="@drawable/background_button_cancel"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    tools:ignore="ButtonStyle" />
                <Button
                    android:id="@+id/but_done_challenge"
                    android:text="@string/dialog_challenge_done"
                    android:textSize="14sp"
                    android:textColor="@color/icons"
                    android:background="@drawable/background_button"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>