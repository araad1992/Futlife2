<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:background="@color/icons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_title_dialog"
        android:text="@string/dialog_score_title"
        android:textSize="27sp"
        android:textColor="@color/primaryText"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_player_1"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="2dp"
                app:border_color="@color/color_success"
                android:id="@+id/avatar_player_1"
                android:src="@drawable/avatar_default"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/lbl_player_1"
                android:layout_gravity="center"
                android:text="@string/challenge_username"
                android:textColor="@color/primaryText"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_challenge_player"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:id="@+id/layout_player_2"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                app:border_width="2dp"
                app:border_color="@color/color_success"
                android:id="@+id/avatar_player_2"
                android:src="@drawable/avatar_default"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/lbl_player_2"
                android:layout_gravity="center"
                android:text="@string/challenge_username"
                android:textColor="@color/primaryText"
                android:textSize="17sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="14dp"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/background_border_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txt_your_score"
                android:inputType="number"
                android:gravity="start"
                android:textColor="@color/secondaryText"
                android:hint="@string/dialog_score"
                android:textColorHint="@color/icons"
                android:textSize="90sp"
                android:textAlignment="center"
                android:maxLength="2"
                android:maxLines="1"
                android:layout_gravity="center"
                android:background="@drawable/background_score_text"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginBottom="4dp"
                    android:background="@color/divider"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <View
                    android:layout_marginTop="4dp"
                    android:background="@color/divider"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/txt_rival_score"
                android:inputType="number"
                android:gravity="end"
                android:textColor="@color/secondaryText"
                android:hint="@string/dialog_score"
                android:textColorHint="@color/icons"
                android:textSize="90sp"
                android:textAlignment="center"
                android:maxLength="2"
                android:maxLines="1"
                android:layout_gravity="center"
                android:background="@drawable/background_score_text"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/but_cancel_challenge"
            android:text="@string/dialog_challenge_cancel"
            android:textSize="14sp"
            android:textColor="@color/icons"
            android:background="@drawable/background_button_cancel"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/but_done_challenge"
            android:text="@string/dialog_score_done"
            android:textSize="14sp"
            android:textColor="@color/icons"
            android:background="@drawable/background_button"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</LinearLayout>